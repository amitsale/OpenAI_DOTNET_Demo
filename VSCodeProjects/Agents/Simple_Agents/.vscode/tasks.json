{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "project run",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "$env:PYTHONPATH=\"${workspaceFolder}\"; .venv\\Scripts\\python.exe main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
